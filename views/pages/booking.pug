  // Page header
  include ../sections/_header-default

  +breadcrumbs({
      path: [[menu[activeIndex].title, menu[activeIndex].link], [pageName]]
  })

  section.section-lg.bg-white.text-center
    .shell
      h3 Book an Appointment
      // RD Calendar
      .booking-calendar#chapters-select
        .rdc-panel.text-center
          a.rdc-prev
          h4
            span.rdc-month
            =' '
            span.rdc-fullyear
          a.rdc-next
        .rdc-table
        .rdc-events
          a.rdc-events_close
          ul.list-unstyled
            li.rdc-event(data-date='01/15/2017')
              table.table.rdc-event-booking-table
                thead
                  tr
                    th(colspan="3"): p.heading-5 Available Appointments on #[span January 14, 2016]
