                  tr
                    td
                      dl.dl-horizontal-mod-1
                        dt: span.icon.icon-md.icon-primary.linear-icon-clock3
                        dd
                          time(datetime="2016") 8:00am - 9:00am
                    td
                      span 2 time slots available
                    td.text-sm-right: button.button.button-primary(data-toggle="modal" data-target="#appointment") Book Appointment
