                })

          // Pagination
          section.section-sm
            +pagination-classic(1,
              [{"href": "#"}, {"href": "#"}, {"href": "#"}, {"href": "#"}],
              null,
              {"title": "", "href": "#"}
            )

        .cell-md-3.section-divided__aside.section__aside-left
          include ../sections/_section-aside-sidebar-shop

  // Page Footer
  include ../sections/_footer-corporate