    <![endif]-->
  body
    // Page 
    .page        
      #page-loader: .cssload-container: .cssload-speeding-wheel
      block page

      block modals

    // Global Mailform Output
    #form-output-global.snackbars

    +photoswipe()

    // Javascript
    script(src="javascripts/core.min.js")
    script(src="javascripts/script.js")

